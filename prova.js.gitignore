@import url("https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@400..700&display=swap");
/* setup generali */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
}

img {
  max-width: 100%;
}
ul {
  list-style-type: none;
}

.debug * {
  min-height: 100px;
  padding: 5px;
  background-color: rgb(255, 9, 9);
  border: 2px rgb(22, 1, 140);
}

.border {
  border: 2px dashed black;
}

/* utility */

.custom-container {
  max-width: 1100px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1.5rem;
  padding-right: 1.5rem;
}

.custom-row {
  display: flex;
  flex-wrap: wrap;
  row-gap: 2rem;
  margin-left: -1.5rem;
  margin-right: -1.5rem;
}

[class^="col"] {
  padding-left: 1.5rem;
  padding-right: 1.5rem;
}

.custom-col-1-1 {
  width: calc(100%);
}

.custom-col-1-3 {
  width: calc(100% / 3);
  display: flex;
  justify-content: center;
}

.custom-card {
  height: 400px;
  width: 90%;
  background-color: white;
  position: relative;
}
.custom-card-img {
  background-color: #92c952;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 1rem;
  height: 70%;
}
.custom-card-text {
  background-color: aqua;
  text-align: center;
}

.nail {
  position: absolute;
  background-color: #9a2f25;
  height: 30px;
  width: 30px;
  border-radius: 50%;
  top: -2%;
  right: 46%;
  border: gray solid 1px;
}

body {
  background-image: url(./img/cork.png);
}
main {
  padding-top: 4rem;
}

header {
  background-image: url(./img/wall.png);
  height: 10rem;
  display: flex;
  justify-content: center;
  align-items: center;
}

h1 {
  font-size: 5rem;
  font-family: Edu Tas Beginner, sans-serif;
  font-weight: bolder;
}
